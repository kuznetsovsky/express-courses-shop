<h1>My Orders</h1>

{{#if orders.length}}
{{#each orders}}
<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <div>
          <span class="card-title">
            Order <sup><small>{{_id}}</small></sup>
          </span>
        </div>
        <p class="js-date-format">{{date}}</p>
        <p><em>{{user.userId.name}}</em> ({{user.userId.email}})</p>
        <ol>
          {{#each courses}}
          <li>{{course.title}} (x<strong>{{count}}</strong>)</li>
          {{/each}}
        </ol>
        <hr>
        <p>Total price: <span class="price right">{{price}}</span></p>
      </div>
    </div>
  </div>
</div>
{{/each}}
{{else}}
<p>No orders</p>
{{/if}}