<h1>Edit course {{course.title}}</h1>

<div class="row">
  <form action="/courses/edit" method="POST" class="col s12">
    <div class="row">
      <div class="input-field col s12">
        <input value="{{course.title}}" id="course-name" name="title" type="text" class="validate" required>
        <label for="course-name">Course name</label>
        <span class="helper-text" data-error="course name is not correct"></span>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input value="{{course.price}}" id="course-price" name="price" type="number" class="validate" min="1" required>
        <label for="course-price">Course price</label>
        <span class="helper-text" data-error="The course price is incorrect"></span>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input value="{{course.imageUrl}}" id="course-image-url" name="imageUrl" type="text" class="validate" required>
        <label for="course-image-url">URL images course</label>
        <span class="helper-text" data-error="wrong url"></span>
      </div>
    </div>
    <button class="btn waves-effect waves-light" type="submit">Edit course
    </button>
    <input hidden type="text" name="_id" value="{{course._id}}">
  </form>
</div>
<div class="row">
  <form action="/courses/remove" method="POST" class="col s12">
    <input hidden type="text" name="_id" value="{{course._id}}">
    <button class="btn red darken-3" type="submit">Remove course
  </form>
</div>