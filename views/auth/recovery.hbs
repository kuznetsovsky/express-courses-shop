<div class="row">
  <div class="col s8 offset-s2">
    <div class="wrapper">
      <h3>Set new password</h3>
      {{#if recoveryError}}
        <p class="alert">{{recoveryError}}</p>
      {{/if}}
      <form action="/auth/recovery" method="POST" class="col s12">
        <div class="row">
          <div class="input-field col s12">
            <input id="password" name="password" type="password" class="validate" required>
            <label for="password">New password</label>
            <span class="helper-text" data-error="password is incorrect"></span>
          </div>
        </div>
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <input type="hidden" name="userId" value="{{userId}}">
        <input type="hidden" name="token" value="{{token}}">
        <button class="btn waves-effect waves-light" type="submit">Change Password</button>
      </form>
    </div>
  </div>
</div>